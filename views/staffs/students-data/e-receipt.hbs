<section style="background-color: #c0fefc;width: 100%;height: 100%;">
    <div class="container">

        <div class="row">

            <div class="col-md-3">
            </div>

            <div class="receipt col-md-6 bg-light mt-3">
                <div class="text-center receipt-h">
                    <h2 class="mt-3">college managment system</h2>
                    <h4 class="mt-3">-payment receipt-</h4>
                </div>
                <div class="row">
                    <div id="printable" class="receipt receipt-h col-md-12 text-center bg-light mt-5">

                        <h6>si.no :
                            <span>{{feeData.checkStudentData.RegNo}}/{{feeData.checkFeeData.Sem}}{{feeData.Sem}}/{{feeData.Date}}</span>
                        </h6>
                        <h6>reg.no : <span>{{feeData.checkStudentData.RegNo}}</span></h6>
                        <h6>addmission code : <span>{{feeData.checkStudentData.Admissioncode}}</span></h6>
                        <h6>department : <span>{{feeData.checkStudentData.Department}}</span></h6>
                        <h6>name : <span>{{feeData.checkStudentData.Name}}</span></h6>
                        <h6>sem : <span>{{feeData.checkFeeData.Sem}}{{feeData.Sem}}</span></h6>
                        <h6>date of pay : <span>{{feeData.Date}}</span></h6>
                        <h6>total/sem {{feeData.checkFeeData.Sem}}{{feeData.Sem}} :
                            <span>{{feeData.checkFeeData.Total}}{{feeData.Total}}</span>
                        </h6>
                        <h6>amount of pay : <span>{{feeData.Amount}}</span></h6>
                        <h6>due : <span>{{math feeData.Due "+" feeData.Amount}}</span></h6>
                        <hr>
                        <table class="table">
                            <tr>
                                <th class="verify">
                                    <h6>verified by : <span>{{staff.Name}}</span></h6>
                                    <h6>signature :</h6>
                                </th>
                                <th class="verify-right">
                                    <h6>office seal :</h6>
                                </th>
                            </tr>
                        </table>
                        <p class="text-danger print">* mast take a copy for student</p>
                        <p class="text-center">keep it for future reference</p>
                    </div>
                </div>

            </div>

        </div>

    </div>
    </div>

<div class="text-center printing-data">
    <button class="print btn btn-primary mt-3 mb-5" onclick="window.print()"><a href="/staffs/fee-payments"><i class="fas fa-print"></i></a></button>
</div>

</section>


